<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_template_sale_peoduct_view_inherite">
        <field name="name">product.template.sales.product.inherite</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_update_product" string="Update Product" class="btn-success oe_highlight" type="object" attrs="{'always_visible': True}"/>
            </xpath>
        </field>
    </record>

    <record id="sale.product_template_action" model="ir.actions.act_window">
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
